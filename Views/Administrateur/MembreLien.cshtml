@model ICollection<NetAtlas_The_True_Project.Models.Lien>

@{
    ViewData["Title"] = "Publications de liens";
    Layout = "~/Views/Shared/_LayoutAdminPubliImaVid.cshtml";
}


<main id="main" class="main">
    <div class="pagetitle">
      <h1>Bienvenue !</h1><hr />
      <p>Liste des liens</p>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <!-- Table with hoverable rows -->
      <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">
                Liens
            </th>
            <th scope="col">
                Action
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
        <tr>
            
            <td>
                 <a href="@item.AdresseUrl">@item.AdresseUrl</a>
            </td>
            <td>
                <a asp-action="SupprimerPublicationAdmin" asp-route-id="@item.IdRessource" class="btn-danger btn">Retirer</a>
            </td>
        </tr>
}
    </tbody>
    </table>
      <!-- End Table with hoverable rows -->
    </section>
</main><!-- End #main -->







