@model IEnumerable<NetAtlas_The_True_Project.Models.Membre>

@{
    ViewData["Title"] = "Index Requetes d'ami";
    Layout = "~/Views/Shared/_LayoutMembre.cshtml";
    ViewBag.UserNameRecup = @ViewBag.UserNameRecup;
    
}

<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h1 class="text-center text-info">Mes Invitations</h1>
@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nom)</th>
                <th>@Html.DisplayNameFor(model => model.Prenom)</th>
                <th>@Html.DisplayNameFor(model => model.AdresseMail)</th>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>Que faire ?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                    <td>@Html.DisplayFor(modelItem => item.AdresseMail)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td class="td-actions">
                        <a asp-action="Accepter" asp-route-id="@item.IdMembre" rel="tooltip" class="btn btn-info btn-sm btn-icon">
                            <i class="tim-icons icon-single-02"></i>
                        </a>
                        <a asp-action="Refuser" asp-route-id="@item.IdMembre" rel="tooltip" class="btn btn-danger btn-sm btn-icon">
                            <i class="tim-icons icon-simple-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
            </table>
            }
else
    {
        <h1 class="text-center text-warning">Aucune invitation ne vous est destinée pour l'instant!!</h1>
    }